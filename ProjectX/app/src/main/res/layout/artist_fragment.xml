<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/artistfragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ArtistFragment.ArtistFragment">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sp"
        android:layout_width="413dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_tb"
        app:umanoOverlay="false"
        app:umanoPanelHeight="350dp"
        app:umanoParallaxOffset="100dp"
        tools:context=".Playlist">

        <LinearLayout
            android:id="@+id/hostImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            >
            <TextView
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="40dp"
                android:textColor = "#FFFFFF"
                android:layout_gravity="center"
                ></TextView>

            <TextView
                android:id="@+id/noOfFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "200 followers"
                android:textColor = "#FFFFFF"
                android:layout_gravity="center">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor = "#FFFFFF"
                android:id="@+id/artistBio"
                ></TextView>
        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</FrameLayout>